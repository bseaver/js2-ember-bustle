{{#link-to 'article' article.id}}
  <div class="row">
    <div class="col-md-6">
      <img src={{article.picture}} alt={{article.category}} class="img-responsive">
    </div>
    <div class="col-md-6">
      <h3>{{article.headline}}</h3>
      <p>{{article.byline}}</p>
      <p>{{article.release}}</p>
      <p>{{article.blurb}}</p>
    </div>
  </div>
{{/link-to}}
