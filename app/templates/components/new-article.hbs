{{#if addNewArticle}}
  <h1>New Article</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category"}}
      </div>

      <div class="form-group">
        <label for="headline">Headline</label>
        {{input value=headline id="headline"}}
      </div>

      <div class="form-group">
        <label for="byline">Byline</label>
        {{input value=byline id="byline"}}
      </div>

      <div class="form-group">
        <label for="story">Story</label>
        {{input value=story id="story"}}
      </div>

      <div class="form-group">
        <label for="release">Release Date</label>
        {{input value=release id="release"}}
      </div>

      <div class="form-group">
        <label for="picture">Image URL</label>
        {{input value=picture id="picture"}}
      </div>

      <button {{action 'saveArticle'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'articleFormShow'}}>New Article</button>
{{/if}}
